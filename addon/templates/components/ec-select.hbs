<span class="cs-placeholder" onclick={{action 'toggleSelect'}}>
  {{#if selectedItem}}
    {{selectedItem}}
  {{else}}
    {{placeholder}}
  {{/if}}
</span>
<div class="cs-options">
  <ul>
    {{#each children as |child|}}
      <li onclick={{action 'onChange' child.value}} class="{{child.class}}">
        <span>{{child.value}}</span>
      </li>
      {{/each}}
  </ul>
</div>
<select>
  {{yield}}
</select>
